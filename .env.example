# =================================
# SoloMate Backend Configuration
# =================================

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/solomate_db

# Authentication Configuration (REQUIRED)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# External API Keys (REQUIRED)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-from-google-cloud-console
OPENAI_API_KEY=sk-your-openai-api-key-from-openai-dashboard

# Google OAuth (REQUIRED for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-oauth-client-id-from-google-cloud-console
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-from-google-cloud-console

# Environment (Optional - defaults to development)
ENVIRONMENT=development

# CORS Configuration (Optional - defaults provided)
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]

# File Upload Configuration (Optional - has defaults)
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

# Safety Index Weights (Optional - has defaults)
SAFETY_INDEX_WEIGHT_REPORTS=0.4
SAFETY_INDEX_WEIGHT_TIME=0.3
SAFETY_INDEX_WEIGHT_DENSITY=0.3

# Quest Configuration (Optional - has defaults)
DEFAULT_QUEST_RADIUS=100
MAX_QUEST_RADIUS=1000
MIN_QUEST_RADIUS=10